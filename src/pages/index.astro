---
import BaseLayout from '../layouts/BaseLayout.astro';
import ComplianceProblem from '../components/ComplianceProblem.astro';
import Solution from '../components/Solution.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import AIAgents from '../components/AIAgents.astro';
import Contact from '../components/Contact.astro';

const title = 'Dome42 - AI-Powered Compliance Automation';
const description = 'The unified platform that makes cybersecurity and compliance simple, automated and accessible.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink} current="">
  <div class="hero-section">
    <div class="hero-content">
      <div class="highlight-bar"></div>
      <h1>AI-Powered<br>Compliance Automation</h1>
      <p class="subtitle">The unified platform that makes cybersecurity and compliance simple, automated, and accessible.</p>
      <a href="/#contact" class="hero-cta">Get Started Now</a>
    </div>
    <div class="background-glow"></div>
  </div>
  
  <ComplianceProblem />
  <Solution />
  <WhyChooseUs />
  <AIAgents />
  <Contact />
</BaseLayout>

<style>
  .hero-section {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60vh;
    padding: 6rem 0;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  h1 {
    font-size: 4.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.3rem;
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
    color: var(--text-secondary);
  }

  .hero-cta {
    display: inline-block;
    background-color: var(--primary-color);
    color: #FFFFFF;
    padding: 16px 36px;
    border-radius: 10px;
    font-size: 1.2em;
    font-weight: bold;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(84, 142, 155, 0.2);
    color: #FFFFFF;
  }

  .background-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 800px;
    height: 600px;
    background: radial-gradient(circle, rgba(84, 142, 155, 0.1) 0%, rgba(84, 142, 155, 0) 70%);
    transform: translate(-50%, -50%);
    z-index: 0;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
    }
    .subtitle {
      font-size: 1.1rem;
    }
    .hero-section {
      padding: 4rem 0;
    }
  }
</style>