---
import Logo from './Logo.astro';
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-section about">
      <Logo />
      <p class="tagline">
        Simplifying cybersecurity and compliance through automation.
      </p>
      <div class="socials">
        <a aria-label="Twitter"><i class="fab fa-twitter"></i></a>
        <a aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
        <a aria-label="Github"><i class="fab fa-github"></i></a>
      </div>
    </div>

    <div class="footer-section links">
      <h3>Company</h3>
      <ul>
        <li><a href="/about">About Us</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </div>

  </div>

  <div class="footer-bottom">
    <p>&copy; {new Date().getFullYear()} Dome42. All rights reserved.</p>
    <p class="template-credit">
      Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.
      Original template by <a href="https://www.twitter.com/Charca" target="_blank" rel="noopener">Maxi Ferreira</a>.
    </p>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--background-body);
    color: var(--text-secondary);
    padding: 60px 20px;
    border-top: 1px solid var(--border-color);
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    gap: 40px;
  }

  .footer-section {
    flex: 1;
    min-width: 200px;
    margin: 20px 0;
  }

  .about .tagline {
    font-size: 1rem;
    line-height: 1.6;
    margin-top: 20px;
    margin-bottom: 20px;
  }
  
  .socials {
    display: flex;
    gap: 20px;
  }

  .socials a {
    color: var(--text-secondary);
    font-size: 1.5em;
    transition: color 0.3s;
  }

  .socials a:hover {
    color: var(--primary-color);
  }

  .footer-section h3 {
    font-size: 1.1em;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .links ul li a {
    color: var(--text-secondary);
    text-decoration: none;
    margin-bottom: 15px;
    display: block;
    transition: color 0.3s;
  }

  .links ul li a:hover {
    color: var(--text-main);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 40px;
    border-top: 1px solid var(--border-color);
    margin-top: 40px;
    font-size: 0.9em;
  }
  
  .sources {
    margin-bottom: 1.5rem;
    font-size: 0.8em;
    opacity: 0.6;
  }

  .template-credit {
    font-size: 0.9em;
    opacity: 0.5;
    margin-top: 10px;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .socials {
      justify-content: center;
    }
  }
</style>
