---
const { current = '' } = Astro.props;
---

<style>
  nav {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex: 1;
    margin-left: 20px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 1em;
  }

  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 5px 10px;
    border-radius: 8px;
    position: relative;
    transition: color 0.2s ease, background-color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--text-main);
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  .nav-links a.selected {
    color: var(--text-main);
  }

  .cta-button {
    margin-left: 20px;
    padding: 8px 20px;
    background-color: var(--primary-color);
    color: #FFFFFF;
    font-weight: bold;
    border-radius: 999px;
    transition: all 0.3s ease;
    font-size: 0.9em;
  }

  .cta-button:hover {
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(84, 142, 155, 0.4);
    color: white;
  }

  @media screen and (max-width: 768px) {
    .nav-links {
      display: none; /* Simple responsive approach: hide links on mobile */
    }
  }

</style>

<nav>
  <div class="nav-links">
    <a class={current === "" ? "selected" : ""} href='/'>Home</a>
    <a class={current === "about" ? "selected" : ""} href='/about'>About</a>
    <a class={current === "blog" ? "selected" : ""} href='/blog'>Blog</a>
  </div>
  <a href="/#contact" class="cta-button">Get Started</a>
</nav>
